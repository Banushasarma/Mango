@model LoginRequestDto

@{
    ViewBag.Title = "Login";
}

<form method="post" asp-action="Login">
    <div class="container border p-4">
        <div class="row text-center">
            <h1 class="text-white">Login</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input type="email" asp-for="UserName" class="form-control" placeholder="Username..." />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3  pb-2">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3  pb-2">
                <button type="submit" class="btn btn-success form-control">Login</button>
            </div>
        </div>
    </div>
</form>